
<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="card-garden">
        <%= cl_image_tag @garden.image.key%>
        <div class="card-garden-infos">
          <p><strong>Titre de l'annonce</strong>: <%= @garden.title %></p>
          <p><strong>Description</strong>: <%= @garden.description %></p>
          <p><strong>Prix</strong>: <%= @garden.price %></p>
          <p><strong>Addresse</strong>: <%= @garden.address %></p>
        </div>
      </div>
    </div>
    <div class="col-4">
      <%= simple_form_for [ @garden, @reservation ] do |f| %>
        <%= f.input :date_start, as: :date, html5: true %>
        <%= f.input :date_end, as: :date, html5: true %>
        <%= f.submit "RÃ©server", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>

