
<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-8">
      <div class="card-garden">
        <%= cl_image_tag @garden.image.key%>
        <div class="card-garden-infos">
          <p><strong>Titre de l'annonce</strong>: <%= @garden.title %></p>
          <p><strong>Description</strong>: <%= @garden.description %></p>
          <p><strong>Prix</strong>: <%= @garden.price %></p>
          <p><strong>Addresse</strong>: <%= @garden.address %></p>
        </div>
      </div>
    </div>
    <div class="col-4">
      <h2 class="titleheader text-left">Réservations </h2>
      <%= simple_form_for [ @garden, @reservation ] do |f| %>
        <%= f.input :date_start, as: :date, html5: true, label: "Date de début" %>
        <%= f.input :date_end, as: :date, html5: true, label: "Date de fin" %>
        <%= f.submit "Réserver", class: "btn btn-brique" %>
      <% end %>
    </div>
  </div>
</div>

